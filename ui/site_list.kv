# ui/site_list.kv

<SiteListScreen>:
    name: 'site_list'

    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Select a Temple"
            left_action_items: [['arrow-left', lambda x: setattr(app.root, 'current', 'home')]]

        ScrollView:
            MDList:
                id: sites_container
