# religion.kv
<ReligionScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20]
        spacing: 10

        # Header
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                text: 'Back'
                size_hint: (None, None)
                size: (80, 90)
                background_normal: ''
                background_color: [0.9, 0.5, 0.2, 1]
                on_release: root.go_back()

            Label:
                id: title_label
                text: 'Religious Information'
                font_size: '20sp'
                bold: True
                color: 0,0,0,1
                size_hint_x: 0.8
                halign: 'center'

        # Content Area
        ScrollView:
            Label:
                id: content_label
                text_size: (self.width, None)
                size_hint_y: None
                height: self.texture_size[1]
                color: 0,0,0,1
                padding: [10, 10]
                halign: 'left'
                valign: 'top'
                markup: True

        # Footer Buttons
        BoxLayout:
            size_hint_y: None
            height: 70
            spacing: 20
            padding: [0, 10]

            Button:
                id: change_button
                text: 'Change Religion'
                size_hint_x: 0.7
                background_normal: ''
                background_color: [0.9, 0.5, 0.2, 1]
                on_release: root.open_religion_menu()

            Button:
                id: settings_button
                text: 'Settings'
                size_hint_x: 0.3
                background_normal: ''
                background_color: [0.9, 0.5, 0.2, 1]
                on_release: root.manager.current = 'settings'