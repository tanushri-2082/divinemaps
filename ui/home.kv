#:import dp kivy.metrics.dp

<HomeScreen>:
    name: 'home'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        # 1) Background Image (faded temple silhouette)
        Image:
            source: 'data/bg.jpg'
            allow_stretch: True
            keep_ratio: False
            opacity: 0.2
            size: root.size
            pos: root.pos

        # 2) App Logo + Title
        BoxLayout:
            orientation: 'vertical'
            size_hint: .8, None
            height: dp(500)
            pos_hint: {'center_x': .5, 'center_y': .6}
            spacing: dp(10)

            # Logo
            Image:
                source: 'data/logo.jpg'
                size_hint: None, None
                size: dp(150), dp(150)
                pos_hint: {'center_x': .5}

            # Title & Tagline
            Label:
                id: title_label
                text: app.get_translations('Divine Maps')
                font_size: '32sp'
                bold: True
                halign: 'center'
                color: [0.2, 0.2, 0.2, 1]
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                id: tagline_label
                text: app.get_translations('Spiritual Exploration Made Simple')
                font_size: '18sp'
                italic: True
                halign: 'center'
                color: [0.3, 0.3, 0.3, 1]
                size_hint_y: None
                height: self.texture_size[1]

            # Login Form
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                padding: [dp(20), dp(10)]
                size_hint_y: None
                height: dp(160)

                TextInput:
                    id: username_input
                    hint_text: app.get_translations("Enter username")
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: password_input
                    hint_text: app.get_translations("Enter password")
                    password: True
                    size_hint_y: None
                    height: dp(40)

                Button:
                    id: login_button
                    text: app.get_translations('Login')
                    size_hint_y: None
                    height: dp(50)
                    on_release: root.do_login(username_input.text, password_input.text)
                    background_normal: ''
                    background_color: [0.9, 0.5, 0.2, 1]
                    color: [1, 1, 1, 1]
                    font_size: '18sp'
                    radius: [dp(10),]

        # 4) Links: Sign Up / Forgot Password / Continue as Guest
        BoxLayout:
            orientation: 'horizontal'
            size_hint: .8, None
            height: dp(30)
            pos_hint: {'center_x': .5, 'y': .28}
            spacing: dp(20)

            Label:
                id: signup_label
                text: "[ref=signup]" + app.get_translations('Sign Up') + "[/ref]"
                markup: True
                font_size: '14sp'
                halign: 'left'
                color: [0.2, 0.2, 0.2, 1]
                on_ref_press: root.go_to_signup()

            Label:
                id: forgot_label
                text: "[ref=forgot]" + app.get_translations('Forgot Password') + "[/ref]"
                markup: True
                font_size: '14sp'
                halign: 'center'
                color: [0.2, 0.2, 0.2, 1]
                on_ref_press: root.go_to_forgot()

            Label:
                id: guest_label
                text: "[ref=guest]" + app.get_translations('Continue as Guest') + "[/ref]"
                markup: True
                font_size: '14sp'
                halign: 'right'
                color: [0.2, 0.2, 0.2, 1]
                on_ref_press: root.continue_as_guest()

        # 5) Spiritual Quote
        Label:
            id: quote_label
            text: app.get_translations('Quote')
            font_size: '16sp'
            italic: True
            halign: 'center'
            color: [0.4, 0.4, 0.4, 0.7]
            size_hint: .8, None
            height: self.texture_size[1]
            pos_hint: {'center_x': .5, 'y': .22}

        # 6) Language Selector
        Spinner:
            id: lang_selector
            text: app.i18n['locale']
            values: ['en', 'hi', 'kn']
            size_hint: None, None
            size: dp(80), dp(30)
            pos_hint: {'right': .98, 'top': .98}
            on_text:
                app.i18n['locale'] = self.text
                root.update_translations()

        # 7) Footer: Version & Legal
        BoxLayout:
            size_hint: .8, None
            height: dp(20)
            pos_hint: {'center_x': .5, 'y': .02}
            spacing: dp(10)

            Label:
                id: version_label
                text: app.get_translations('Version v1.0.0')
                font_size: '12sp'
                color: [0.5, 0.5, 0.5, 1]
                halign: 'left'

            Label:
                id: terms_label
                text: "[ref=terms]" + app.get_translations('Terms') + "[/ref] | " + "[ref=privacy]" + app.get_translations('Privacy') + "[/ref]"
                markup: True
                font_size: '12sp'
                color: [0.5, 0.5, 0.5, 1]
                halign: 'right'
                on_ref_press:
                    if args[1] == 'terms': root.open_terms()
                    if args[1] == 'privacy': root.open_privacy()