#:import NoTransition kivy.uix.screenmanager.NoTransition

<HomeScreen>:
    name: 'home'
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        # 1) Background Image (faded temple silhouette)
        Image:
            source: 'data/static/bg_temple.jpg'
            allow_stretch: True
            keep_ratio: False
            opacity: 0.2
            size: root.size
            pos: root.pos

        # 2) App Logo + Title
        BoxLayout:
            orientation: 'vertical'
            size_hint: .8, .3
            pos_hint: {'center_x': .5, 'top': .95}
            spacing: dp(10)

            # Logo
            Image:
                source: 'data/images/logo.png'
                size_hint: None, None
                size: dp(100), dp(100)
                pos_hint: {'center_x': .5}

            # Title & Tagline
            Label:
                text: app.get_translation('home.title')
                font_size: '32sp'
                bold: True
                halign: 'center'
                color: [0.2,0.2,0.2,1]
                size_hint_y: None
                height: self.texture_size[1]
            Label:
                text: app.get_translation('home.tagline')
                font_size: '18sp'
                italic: True
                halign: 'center'
                color: [0.3,0.3,0.3,1]
                size_hint_y: None
                height: self.texture_size[1]

        # 3) Login Form
        BoxLayout:
            orientation: 'vertical'
            size_hint: .8, .35
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: dp(15)

            # Username Input
            TextInput:
                id: username
                hint_text: app.get_translation('home.username_placeholder')
                size_hint_y: None
                height: dp(45)
                multiline: False
                padding: [dp(10), dp(12)]
                background_normal: ''
                background_color: [1,1,1,1]
                foreground_color: [0,0,0,1]
                canvas.before:
                    Color:
                        rgba: [0.85,0.85,0.85,1]
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]

            # Password Input
            TextInput:
                id: password
                hint_text: app.get_translation('home.password_placeholder')
                password: True
                size_hint_y: None
                height: dp(45)
                multiline: False
                padding: [dp(10), dp(12)]
                background_normal: ''
                background_color: [1,1,1,1]
                foreground_color: [0,0,0,1]
                canvas.before:
                    Color:
                        rgba: [0.85,0.85,0.85,1]
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]

            # Login Button
            Button:
                text: app.get_translation('home.login_button')
                size_hint_y: None
                height: dp(50)
                on_release: root.do_login(username.text, password.text)
                background_normal: ''
                background_color: [0.9,0.5,0.2,1]
                color: [1,1,1,1]
                font_size: '18sp'
                radius: [dp(10),]

        # 4) Links: Sign Up / Forgot Password / Guest
        BoxLayout:
            orientation: 'horizontal'
            size_hint: .8, None
            height: dp(30)
            pos_hint: {'center_x': .5, 'y': .28}
            spacing: dp(20)

            Label:
                text: f"[ref=signup]{app.get_translation('home.signup_link')}[/ref]"
                markup: True
                font_size: '14sp'
                halign: 'left'
                on_ref_press: root.go_to_signup()

            Label:
                text: f"[ref=forgot]{app.get_translation('home.forgot_password')}[/ref]"
                markup: True
                font_size: '14sp'
                halign: 'center'
                on_ref_press: root.go_to_forgot()

            Label:
                text: f"[ref=guest]{app.get_translation('home.continue_guest')}[/ref]"
                markup: True
                font_size: '14sp'
                halign: 'right'
                on_ref_press: root.continue_as_guest()

        # 5) Spiritual Quote
        Label:
            text: app.get_translation('home.quote')
            font_size: '16sp'
            italic: True
            halign: 'center'
            color: [0.4,0.4,0.4,0.7]
            size_hint: .8, None
            height: self.texture_size[1]
            pos_hint: {'center_x': .5, 'y': .22}

        # 6) Language Selector
        Spinner:
            text: i18n.get('locale')
            values: ['en','hi','kn']
            size_hint: None, None
            size: dp(80), dp(30)
            pos_hint: {'right': .98, 'top': .98}
            on_text: i18n.set('locale', self.text)

        # 7) Footer: Version & Legal
        BoxLayout:
            size_hint: .8, None
            height: dp(20)
            pos_hint: {'center_x': .5, 'y': .02}
            spacing: dp(10)

            Label:
                text: app.get_translation('home.version')
                font_size: '12sp'
                color: [0.5,0.5,0.5,1]
                halign: 'left'

            Label:
                text: f"[ref=terms]{app.get_translation('home.terms')}[/ref] | [ref=privacy]{app.get_translation('home.privacy')}[/ref]"
                markup: True
                font_size: '12sp'
                color: [0.5,0.5,0.5,1]
                halign: 'right'
                on_ref_press:
                    if args[1] == 'terms': root.open_terms()
                    if args[1] == 'privacy': root.open_privacy()